# .env.example - Configuration sécurisée

# Clé secrète Flask (OBLIGATOIRE - générer une clé forte)
# Utilisez: python -c "import secrets; print(secrets.token_hex(32))"
FLASK_SECRET_KEY=your_very_long_and_secure_secret_key_here_64_chars_minimum

# Configuration email (OBLIGATOIRE)
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_specific_password_not_your_gmail_password

# Environnement (optionnel)
FLASK_ENV=development  # ou 'production'

